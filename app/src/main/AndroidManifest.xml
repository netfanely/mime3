<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.netfanely.mime3">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EscritorioActivity"
            android:label="@string/title_activity_escritorio"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".iniciarsesion.AyudaActivity"
            android:label="@string/ayuda" />
        <activity
            android:name=".iniciarsesion.AcercadeActivity"
            android:label="@string/acerca_de" />
        <activity
            android:name=".iniciarsesion.InformacionActivity"
            android:label="@string/informacion" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CrearCuentaActivity"
            android:label="@string/crear_cuenta" />
        <activity
            android:name=".iniciarsesion.InicioSesionActivity"
            android:label="@string/iniciar_sesion" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>