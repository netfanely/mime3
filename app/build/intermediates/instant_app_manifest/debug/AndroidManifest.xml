<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidchura.tiendasperuanas"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.netfanely.mime3.EscritorioActivity"
            android:label="@string/title_activity_escritorio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.netfanely.mime3.iniciarsesion.AyudaActivity"
            android:label="@string/ayuda" />
        <activity
            android:name="com.netfanely.mime3.iniciarsesion.AcercadeActivity"
            android:label="@string/acerca_de" />
        <activity
            android:name="com.netfanely.mime3.iniciarsesion.InformacionActivity"
            android:label="@string/informacion" />
        <activity
            android:name="com.netfanely.mime3.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.netfanely.mime3.CrearCuentaActivity"
            android:label="@string/crear_cuenta" />
        <activity
            android:name="com.netfanely.mime3.iniciarsesion.InicioSesionActivity"
            android:label="@string/iniciar_sesion" />
        <activity
            android:name="com.netfanely.mime3.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.davidchura.tiendasperuanas.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>